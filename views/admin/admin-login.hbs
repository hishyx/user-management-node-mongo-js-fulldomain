<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Admin Login</title>
    <link href="/css/admin/admin-login.css" rel="stylesheet" />
  </head>
  <body>

    <a href="/" class="back-btn">‚Üê Back</a>
    <section>

      <h1>Admin Login</h1>

      <form action="/admin/login" method="post" autocomplete="off">

        <input
          type="email"
          placeholder="Email"
          id="email-box"
          class="input-boxes"
          name="email"
          style="margin-bottom: 30px;"
        />

        <div class="password-wrapper">

          <input
            type="password"
            placeholder="Password"
            id="pass-box"
            name="password"
            class="input-boxes"
          />

          <img
            src="/images/show-pass.png"
            alt="Show password"
            class="password-toggle"
            id="togglePassword"
          />

        </div>

        <p style="color: red;margin-bottom:-10px">{{error}}</p>

        <input type="submit" value="Login" id="button" />

      </form>
    </section>

    <script src="/js/default.js"></script>
  </body>
</html>